{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "ignore": [
      "CHANGELOG.md",
      "LICENSE",
      "tsconfig.json",
      "tsconfig.*.json",
      "src/@types/subgraph/*.ts",
      "*generated.ts",
      "docs/**/*",
      "scripts/release-it*"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "useShorthandArrayType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingComma": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
